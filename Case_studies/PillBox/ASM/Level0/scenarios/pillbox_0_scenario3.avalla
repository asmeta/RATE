begin doNotOpenDrawerIn10Min

	//******************************************************
	// Do not open the drawer within 10 minutes, and overpass the timeout
	//******************************************************
	set openSwitch := false;
	set timeDiffOver600 := true;
	
	step
	
	check redLed = BLINKING;
	check outMess = TAKE_PILL_IN_10_MIN;
	check logMess = NONE;

end

